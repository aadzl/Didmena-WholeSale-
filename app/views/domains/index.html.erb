<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Domains</h1>

<table>
  <thead>
    <tr>
      <th>Domain name</th>
      <th>Code value</th>
      <th>Meaning</th>
      <th>Special case</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.domain_name %></td>
        <td><%= domain.code_value %></td>
        <td><%= domain.meaning %></td>
        <td><%= domain.special_case %></td>
        <td><%= domain.note %></td>
        <td><%#= link_to 'Show', domain %></td>
        <td><%#= link_to 'Edit', edit_domain_path(domain) %></td>
        <td><%#= link_to 'Delete', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Domain', new_domain_path %>
</div>