<div class="container">
  <div class="row first-row">  
    <%= link_to t('cart.empty_cart'), cart_clear_path, :class => "left-align col l6 m6" %>
    <%= link_to t('cart.confirm_order'), purchases_path, method: :post, :class => "right-align col l6 m6" %>      
  </div>
  <div class="row first-row">
    <div class="col s6 offset-s6">
      <%= render :partial => 'cart_order_cost' %>
    </div>
  </div>
  <% for model in cart_models %>
    <table>
      <%= render :partial => 'table_header', :locals => { model: model } %>
      <tbody id='<%= get_toggle_table_id(model) %>' style="display: none;">
        <tr>
          <td colspan="2"></td>
          <% for size in all_sizes %>
            <td class="center"><%= size.code_value %></td>
          <% end %>
        </tr>
        <% for color in model_color_objects(model.id) %>
          <%= render :partial => 'products_table/product_row', :locals => { model: model, color: color } %>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>