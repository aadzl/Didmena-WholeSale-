<div class="container">
  <%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="input-field col s4">
         <%= f.collection_select :model_id, Model.all, :id, :title, { prompt: "Choose a model" }, class: "browser-default" %>
      </div>
      <div class="input-field col s4">
        <%= f.collection_select :color_id, Domain.all.where(domain_name: "COLOR"), :id, :meaning, { prompt: "Choose a color" }, class: "browser-default" %>
      </div>
      <div class="input-field col s4">
        <%= f.collection_select :size_id, Domain.all.where(domain_name: "SIZE"), :id, :meaning, { prompt: "Choose a size" }, class: "browser-default" %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>