<%= form_for(@collection) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'file-path-wrapper'%><br><br>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'materialize-textarea' %>

    <%= f.submit 'Create', class: 'btn waves-effect submit' %>
<% end %>




