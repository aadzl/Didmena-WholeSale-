<div class="container">
  <div class="row">
    <div class="col s12">
      <h4><%= @collection.name%></h4>
      <p>Here will be the gallery of products</p>
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <div class="card">
         <div class="card-image">
          <%= image_tag @collection.image.url %>
          <span class="card-title">
            <%= @collection.name%>
          </span>
         </div>
        <div class="card-content">
          <p><%= @collection.description%></p>
        </div>
        <div class="card-action">
        <% if @collection.models.any? %>
          <%= link_to 'Show', models_path %>
        <% end %>

          <%= link_to 'Edit', edit_collection_path(@collection) %>
          <%= link_to 'Destroy', @collection, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
</div>
