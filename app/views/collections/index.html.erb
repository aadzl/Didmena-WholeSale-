<div class="container">
  <div class="row">
    <div class="col s12">
      <h4><%= t "collections.index.title" %></h4>
      <p><%= link_to t("collections.index.add_new_collection"), new_collection_path %></p>
      <div class="row">
        <% @collections.each do |collection| %>
          <div class="col s6">
            <div class="card medium">
               <div class="card-image">
               <img src="http://placehold.it/350x150">
                <%#= image_tag collection.image.url %>
                <span class="card-title">
                  <%=collection.name%>
                </span>
               </div>
              <div class="card-content">
                <div class='truncate'><%=collection.description%></div>
              </div>
              <div class="card-action center-align">
                <%= link_to 'Show', models_path %>
                <% if current_user %>
                  <% if current_user.role == 'admin' %>
                    <%= link_to 'Edit', edit_collection_path(collection) %>
                    <%= link_to 'Destroy', collection, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
        