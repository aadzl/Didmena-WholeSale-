<div class="container">
  <p id="notice"><%=notice %></p>
  <div class="model">
    <strong>Code:<%= @model.code %></strong><br/>
    <strong>Title:<%= @model.title %></strong><br/>
    <strong>Gender:<%= @model.gender_id %></strong><br/>
    <strong>Category:<%= @model.category_id %></strong><br/>
    <strong>Note:<%= @model.note %></strong><br/>
    <%= link_to 'Edit', edit_model_path(@model) %> |
    <%= link_to 'Back', models_path %>
    <hr/>
  </div>
  <div class="products">
    <% @products.each do |product| %>
      <%= render "product_row", product: product, purchase: @purchase %>
    <% end %>
  </div>
</div>