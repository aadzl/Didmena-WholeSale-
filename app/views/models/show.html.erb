<div class="container">
  <div class="row">
    <div class="col s6 offset-s3 z-depth-1" id="register">
      <h4><%= @model.code %></h4>
      <div class="card-image">
          <%= image_tag @model.image.url %>
          <span class="card-title">
            <%= @model.code%>
          </span>
         </div>
      <strong>Price:</strong>
      <%= @model.price %>
      <strong>Description:</strong>
      <%= @model.description %>
      <%= link_to 'Edit', edit_model_path(@model) %> |
      <%= link_to 'Back', models_path %>
    </div>
    <div class="col s6">
      <p>Here goes pick color</p>
      <p>Here goes pick size</p>
    </div>
  </div>
</div>
