<div class="container">
  <div class="row">
    <h4><%= @model.title %></h4>
    <%= link_to t('back'), @model %>
  </div>
  <div class="row">
    <div class="col s6">
      <div class="row">
        <div class="col s12">
          <h5><%= t('models.color_and_size')%></h5>
        </div>
      </div>
      <div class="row">
        <div class="col s7">
          <input id="colors" placeholder="start typing color" />
        </div>
        <div class="col s5">
          <button id="add_color" class="btn waves-effect waves-light"><%= t('models.add_color')%></button>
        </div>
      </div>
      <div class="row">
        <div class="col s12">
          <b><%= t('models.select_sizes')%></b>
        </div>
      </div>     
      <div class="row">
        <div class="col s12">
          <table id="colorSize">
            <thead>
              <tr>
                <th></th>
                <th data-field="id"><%= t('model.color')%></th>
                  <% @sizes.each do |size| %>
                    <th data-field='<%= size.code_value%>'><%= size.code_value%></th>
                  <% end %> 
              </tr>
            </thead>
            <tbody id="color_row">
              <% if @products.any? %>
                <% @colors.each do |color| %>
                  <% value = Domain.find(color).meaning%>
                  <tr id='<%= value %>'>
                    <td style="background-color: #<%= value %>; width: 5%;"></td>
                    <td style="padding-left: 10px;"><%= value %></td>
                    <% @sizes.each do |size| %>
                      <td>
                        <% if product_exist?(color, size) && product_in_storage?(color, size) %>
                          <input type='checkbox' class='size' id='<%= value %>-<%=size.code_value %>' checked >
                        <% else %>
                          <input type='checkbox' class='size' id='<%= value %>-<%=size.code_value %>'>
                        <% end %>
                          <label for='<%= value %>-<%=size.code_value %>'></label>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
          <div class="row">
            <% flash.each do |key, value| %>
              <div class="alert alert-<%= key %> center flash-message"><%= value %></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col s6">
      <%= render 'form' %>
    </div>
  </div>
</div>