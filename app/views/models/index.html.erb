<div class="container">
  <div class="row">
    <h6>Search and filters will go here </h6>
  </div>
  <div class="row">
    <% if @models.any? %>
      <% @models.each do |model| %>
        <div class="col s4">
          <div class="card">
            <div class="card-image">
              <img src="http://placehold.it/350x150">
              <span class="card-title"><%= model.title %></span>
            </div>
            <div class="card-content trunkate">
              <p><%= model.note %></p>
            </div>

            <% if current_user %>
              <div class="card-action center">
                <%= link_to 'Order', model %> 
                <% if current_user.apps_manager %>
                  | <%= link_to 'Edit', edit_model_path(model) %> | <%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </div>
            <% else %>
              <div class="card-action center">
                <%= link_to 'Show', model %>
              </div>
            <% end %> 
          </div>
        </div>
      <% end %>  
    <% end %>
  </div>
</div>