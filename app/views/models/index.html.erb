<div class="container">
  <div class="row">
    <div class="col s12">
      <h4>Models</h4>
      <p><%= link_to 'New Model', new_model_path %></p>
      <div class="row">
        <% @models.each do |model| %>
          <div class="col s6">
            <div class="card medium">
               <div class="card-image">
                <img src="http://placehold.it/350x150">
                <%#= image_tag model.image.url %>
                <span class="card-title">
                  <%=model.code%>
                </span>
               </div>
              <div class="card-content">
                <div class='truncate'>
                  <%=model.description%>
                </div>
                <h5><%= model.price %> | <%= Type.find(model.type_id).name %></h5>
              </div>
              <div class="card-action center-align">
                <%= link_to 'Order', model_path(model) %>
                <% if current_user %>
                  <% if current_user.role == 'admin' %>
                    <%= link_to 'Edit', edit_model_path(model) %>
                    <%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>