<div class="container">
  <div class="row">
    <div class="col s12">
      <h4>Models</h4>
      <p><%= link_to 'New Model', new_model_path %></p>
      <div class="row">
        <% @models.each do |model| %>
          <div class="col s6">
            <div class="card medium">
               <div class="card-image">
                <%= image_tag model.image.url, class: 'thumb' if model.image? %>
                <span class="card-title">
                  <%=model.code%>
                </span>
               </div>
              <div class="model-content">
                <p><%=model.description%></p>
              </div>
              <div class="price">
                <p><%= model.price %></p>
                <p><%= model.type_id %></p>
              </div>
              <div class="card-action">
                <%= link_to 'Order', model_path(model) %>
                <% if current_user.role == 'admin' %>
                  <%= link_to 'Edit', edit_model_path(model) %>
                  <%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
