<div class="container">
<%= form_for(@model, :html => { :multipart => true, :id => "model_form" } ) do |f| %>
  <% if @model.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@model.errors.count, "error") %> prohibited this model from being saved:</h2>

      <ul>
      <% @model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s6">
      <%= f.label :code %><br>
      <%= f.text_field :code, id: 'code' %>
    </div>
    <div class="input-field col s6">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
       <%= f.collection_select :gender_id, Domain.where(domain_name: "GENDER"), :id, :meaning, { prompt: "Choose a gender" }, class: "browser-default" %>
    </div>
    <div class="input-field col s6">
      <%= f.collection_select :category_id, Domain.where(domain_name: "CATEGORY"), :id, :meaning, { prompt: "Choose a category" }, class: "browser-default" %>
    </div>
  </div>

  <div class="row">
    <div class="col s6">
    <%= f.fields_for :model_attachments do |p| %>
      <%= p.file_field :avatar, :multiple => true, name: "model_attachments[avatar][]"%>
    <% end %>
    </div>
    <div class="col s6">
      <%= f.label :price %><br>
      <%= f.number_field(:price, step: 0.05) %>
    </div>
  </div>
  <div class="divider"></div>
  <div class="row" style="background: 'green'">
    <div class="col s6">
        <%= f.fields_for :products do |r| %>
        <%= r.text_field :color_id, class: "color_box" %>
        <div id="color_meaning"></div>
        <div id="size_div" class="input-field browser-default"></div>
        <% end %>
    </div>
  </div>
  <div class="divider"></div>
    <div class="row">
      <div class="input-field col s6">
        <%= f.label :note %><br>
        <%= f.text_area :note %>
      </div>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>