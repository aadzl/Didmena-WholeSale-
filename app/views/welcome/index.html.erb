<div class="container">
  <div class="row">
    <div class="col s6">
     <div class="section">
      <h5><%= t "welcome.do_title" %></h5>
      <p><%= t "welcome.do_description" %></p>
    </div>
    <div class="section">
      <h5><%= t "welcome.contact_title" %></h5>
      <i class="tiny material-icons prefix">email</i> informacija@didmena.com<br>
      <i class="tiny material-icons prefix">phone</i> 604-234-1111
      </div>
    </div>

     <% if !current_user %> 
      <div class="col s4 offset-s2 z-depth-1" id="login">  
        <%= form_tag sessions_path do %>
          <%= label_tag t "login.label.email" %> 
          <%= text_field_tag "email"%>
          <%= label_tag t "login.label.password" %>
          <%= password_field_tag :password %>
          <%= submit_tag t "login.label.login", class: 'btn waves-effect submit' %>
        <% end %>
      </div>
    <% end %>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Title</th>
      <th>Gender</th>
      <th>Category</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @models.each do |model| %>
      <tr>
        <td><%= model.code %></td>
        <td><%= model.title %></td>
        <td><%= model.gender_id %></td>
        <td><%= model.category_id %></td>
        <td><%= model.note %></td>
        <td><%= link_to 'Show', model %></td>
        <td><%= link_to 'Edit', edit_model_path(model) %></td>
        <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>