<div class="container">
    <div class="row">
        <div class="col s6 offset-s3 z-depth-1" id="register">
            <div class="section">
                <%= t "register.intro" %>
            </div>
            <%= form_for @user do |f| %>
                <%= f.label "email" %></br>
                <%= f.text_field "email" %></br>

                <%= f.hidden_field :role, :value => 'buyer'%>

                <%= f.label "fname", "First Name" %></br>
                <%= f.text_field "fname" %></br>

                <%= f.label "lname", "Last Name" %></br>
                <%= f.text_field "lname" %></br>

                <%= f.label "password" %></br>
                <%= f.password_field "password" %></br>

                <%= f.label "Re-type password" %></br>
                <%= f.password_field "password_confirmation" %></br>

                <%= f.label "description", "Profile description" %></br>
                <%= f.text_area "description", class: 'materialize-textarea' %></br>

                <%= f.submit "Register", class: 'btn waves-effect submit'%>
            <% end %>
        </div>
    </div>
</div>