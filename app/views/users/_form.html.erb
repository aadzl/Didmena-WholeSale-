<div class="container">
  <div class="row">
    <div class="col s8">
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row">
          <div class="input-field col s6">
            <%= f.label :fname, 'First Name' %><br>
            <%= f.text_field :fname %>
          </div>
          <div class="input-field col s6">
            <%= f.label :lname, 'Last Name' %><br>
            <%= f.text_field :lname %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s6">
            <%= f.label :email, 'Email' %><br>
            <%= f.text_field :email %>
          </div>
          <div class="input-field col s6">
            <%= f.label :phone %><br>
            <%= f.text_field :phone %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s6">
            <%= f.label :password, 'Password' %><br>
            <%= f.text_field :password %>
          </div>
          <div class="input-field col s6">
            <%= f.label :password_confirmation, 'Password Confirmation' %><br>
            <%= f.text_field :password_confirmation %>
          </div>
        </div>

        <div class="field" type="checkbox" class="input-field browser-default">
          <%= f.hidden_field :status, :value => 'active'%>
          <%= f.label :apps_manager, 'Is he administrator'  %><br>
          <%= f.check_box :apps_manager, class: "browser-default" %>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
      </div>
    </div>
</div>
