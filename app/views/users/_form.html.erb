<div class="container">
  <div class="row">
    <div class="col s8">
      <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row">
          <div class="input-field col s6">
            <%= f.label :fname, 'First Name' %><br>
            <%= f.text_field :fname %>
          </div>
          <div class="input-field col s6">
            <%= f.label :lname, 'Last Name' %><br>
            <%= f.text_field :lname %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s6">
            <%= f.label :email, 'Email' %><br>
            <%= f.text_field :email %>
          </div>
          <div class="input-field col s6">
            <%= f.label :phone %><br>
            <%= f.text_field :phone %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s6">
            <%= f.label :password, 'Password' %><br>
            <%= f.text_field :password %>
          </div>
          <div class="input-field col s6">
            <%= f.label :password_confirmation, 'Password Confirmation' %><br>
            <%= f.text_field :password_confirmation %>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <%= f.hidden_field :status, :value => 'active'%>
            <%= f.check_box :apps_manager, class: "browser-default" %>
            <%= f.label :apps_manager, 'Administrator'  %><br>
          </div>
        </div>
        <hr/>

        <%= f.fields_for :companies do |c| %>

      <% if !@company.nil? %>
      <% if @company.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

          <ul>
          <% @company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <% end %>

    <div class="row">
      <div class="input-field col s6">
        <%= c.label :title, 'Company name' %><br>
        <%= c.text_field :title %>
        <%= c.hidden_field :status, :value => 'active'%>
      </div>
    </div>


    <div class="row">
      <div class="input-field col s6">
        <%= c.label :phone %><br>
        <%= c.text_field :phone %>
      </div>
      <div class="input-field col s6">
        <%= c.label :email, 'Company email address' %><br>
        <%= c.text_field :email %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <%= c.label :street, 'Street address' %><br>
        <%= c.text_field :street %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6">
        <%= c.label :city, 'City' %><br>
        <%= c.text_field :city %>
      </div>
      <div class="input-field col s6">
      <%= c.label :postal_code %><br>
      <%= c.text_field :postal_code %>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s6 browser-default">
        <%= c.collection_select :domain_id, Domain.all.where(domain_name: "COUNTRY"), :id, :meaning, { prompt: "Choose a country" }, class: "browser-default" %>
      </div>
    </div>
        <%end%>

        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
      </div>
    </div>
</div>
