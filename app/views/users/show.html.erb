<div class="container">
  <div class="row">
    <div class="col s6">
      <h4><%= @user.full_name %></h4>
      <%= link_to t('back'), users_path %> | <%= link_to t('edit'), edit_user_path(@user) %>
    </div>
  </div>
  <div class="row">
    <div class="col s8 offset-s2">
      <div class="col s6">
        <%= @user.email %><br>
        <% if @user.phone %>
          <%= @user.phone %><br>
        <% end %>
        <% if @user.apps_manager %>
          <%= t('users.admin') %>
        <%end%>
        <%= @user.description %>
      </div>
      <% if !@company.nil? %>
        <div class="col s6">
          <%= link_to t('users.edit_company'), edit_company_path(@company) %><br>
          <%= @company.email %><br>
          <%= @company.phone %><br>
          <%= @company.full_street_address %><br>
          <%= @company.country_postal %><br>
          <%= @company.description %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="divider"></div>
  <div class="row section">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> center flash-message">
        <%= value %>
      </div>
    <% end %>
    <div class="col s8 offset-s2">
      <table class="striped centered">
        <thead>
          <tr>
            <th><%= t('orders.number') %></th>
            <th><%= t('orders.date') %></th>
            <th><%= t('orders.cost') %></th>
            <th><%= t('orders.status') %></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.order_number, order  %></td>
              <td><%= order.order_date %></td>
              <td><%= sprintf "%.2f", order.total_price %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>  
  </div>
</div>
