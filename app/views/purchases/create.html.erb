<div class="container">
  <div class="row">
    <div class="col s8 offset-s2">
      <p class="align-center"><%= t('purchases.thank_you')%></p>
      <p class="align-center"> <%= t('purchases.confirmation_email_message') %> <%= current_user.email %></p>
      <h6 class="align-center"> <%= link_to t('purchases.your_order_number'), @order_path(@order) %> #<%= @order_number %></h6>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <div class="row">
        <div class="col s8 offset-s2">
          <table>
            <thead>
              <tr>
                <th data-field="model-title"><%= t('purchases.product_id')%></th>
                <th data-field="product-color"><%= t('purchases.model_title')%></th>
                <th data-field="product-size"><%= t('purchases.color')%></th>
                <th data-field="product-size"><%= t('purchases.size')%></th>
                <th data-field="quantity"><%= t('purchases.quantity')%></th>
                <th data-field="quantity"><%= t('purchases.cost')%></th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% if @purchases_for_order.any? %>
                <% @purchases_for_order.each do |pfo| %>
                  <tr><%= render "purchase_row", purchases_for_order: pfo %></tr>
                <% end %>
              <% end %>          
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row right-align">
    <div class="col s8 offset-s2">
      <div class="row">
        <b><%= t('purchases.total_cost') %>:</b> <%= sprintf "%.2f", @order.total_price %>
      </div>
      <div class="row">
        <%= link_to t("header.logout"), session_path("current"), method: :delete, :class => "btn waves-effect waves-light left"  %>
      </div>
    </div>
  </div>
</div>