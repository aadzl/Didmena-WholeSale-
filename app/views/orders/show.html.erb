<div class="container">
<p id="notice"><%= notice %></p>

<p>
  <strong>Order number:</strong>
  <%= @order.order_number %>
</p>

<p>
  <strong>Order date:</strong>
  <%= @order.order_date %>
</p>

<p>
  <strong>Representative:</strong>
  <%= @order.representative_id %>
</p>

<p>
  <strong>Total quantity:</strong>
  <%= @order.total_quantity %>
</p>

<p>
  <strong>Total price:</strong>
  <%= @order.total_price %>
</p>

<p>
  <strong>Discount:</strong>
  <%= @order.discount %>
</p>

<p>
  <strong>Currency:</strong>
  <% binding.pry %>
  <% if !@order.domain_id.nil? %>
    <%= Domain.find(@order.domain_id).meaning %>
  <% end %>
</p>

<p>
  <strong>Contact:</strong>
  <%= @order.contact %>
</p>

<p>
  <strong>Note:</strong>
  <%= @order.note %>
</p>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
<div class="divider"></div>

<h3>Purchases</h3>
<div class="row">
        <div class="col s8 offset-s2">
          <table>
            <thead>
              <tr>
                <th data-field="model-title">Product</th>
                <th data-field="product-color">Color</th>
                <th data-field="product-size">Size</th>
                <th data-field="quantity">Quantity</th>
                <th data-field="quantity">Cost</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% if @order.purchases.any? %>
                <% @order.purchases.each do |purchase| %>
                  <% product = Product.find(purchase.product_id) %>
                  <% price = Model.find(product.model_id).price %>
                  <tr><%= render "order_purchases_row", product: product, quantity: purchase.quantity, price: price %></tr>

                <% end %>
              <% end %>          
            </tbody>
          </table>
        </div>



</div>
