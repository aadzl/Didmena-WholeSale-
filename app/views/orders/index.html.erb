<div class="container">
<p id="notice"><%= notice %></p>

<h4>All orders</h4>
<table>
  <thead>
    <tr>
      <th>Order number</th>
      <th>Order date</th>
      <th>Total price</th>
      <th>Contact</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.order_number, order  %></td>
        <td><%= order.order_date %></td>
        <td><%= sprintf "%.2f", order.total_price %></td>
        <td><%= User.find(order.contact).fname %> <%= User.find(order.contact).lname %></td>
        <td><%= link_to 'Show', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
