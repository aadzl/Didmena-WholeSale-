<div class="container" id="header">
<!-- Modal -->
  <div class="modal" data-backdrop="true" keyboard="true" fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <div class="col s4 offset-s2 z-depth-1" id="login"> 
            <div type="button" class="right-align" data-dismiss="modal">X</div>
            <%= form_tag sessions_path do %>
              <%= label_tag t "login.email" %> <%= text_field_tag "email"%>
              <%= label_tag t "login.password" %> <%= password_field_tag :password %>
              <%= submit_tag t "login.login", class: 'btn col s12' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m4">
      <ul id='language-menu'>
        <li><%= link_to "LT", locale: "lt"%> |</li>
        <li><%= link_to "EN", locale: "en"%> |</li>
        <li><%= link_to "RU", locale: "ru"%></li>
      </ul>
    </div>
      <% if current_user %> 
        <div class="col s12 right-top-menu right-align">
          <ul id='session-menu'>
            <li><%= link_to t('session_menu.home'), root_path %></li>
            <li> | <%= link_to t('session_menu.cart'), cart_path %></li>
            <li> | <%= link_to t('session_menu.my_orders'), my_orders_path %></li>
            <% if Model.all.any? %>
              <li> | <%= link_to t('session_menu.models'), models_path %></li>
            <% end %>
            <li> | <%= link_to t("header.logout"), session_path("current"), method: :delete %></li>
          </ul>
        </div>
        <div id="login-menu" class="col s12 right-top-menu">
          <%= t('hello')%>, <%= link_to current_user.fname, user_path(current_user) %><br>
            <% if current_user.apps_manager %>
              <%= link_to t('header.dashboard'), admin_path %> | 
            <% end %>
        </div>
      <% else %>
      <div class="ol s12 m6 right-top-menu">
        <ul id='session-menu'>
           <li type="button" id="header-login" class="" data-toggle="modal" data-target="#myModal"> login | </li>
          <li><%= link_to t("session_menu.home"), root_path %> | </li>
          <% if Model.all.any? %>
            <li> <%= link_to t("session_menu.models"), models_path %></li>
          <% end %>
        </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>